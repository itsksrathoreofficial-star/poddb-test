{
  "name": "poddb-sync-server",
  "version": "1.0.0",
  "description": "Production-ready self-hosted data sync server for PodDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop sync-server",
    "pm2:restart": "pm2 restart sync-server",
    "pm2:logs": "pm2 logs sync-server",
    "pm2:delete": "pm2 delete sync-server",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "install-deps": "npm install --production",
    "setup": "node setup.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-cron": "^3.0.3",
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "podcast",
    "youtube",
    "sync",
    "data",
    "supabase",
    "production"
  ],
  "author": "PodDB Team",
  "license": "MIT"
}
